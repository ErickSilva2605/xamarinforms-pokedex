                HorizontalOptions="FillAndExpand"
                >
                <magic:GradientView.GradientSource>
                    <magic:LinearGradient Angle="0">
                        <magic:GradientStop Offset="0.5" Color="#F5F5F5" />
                        <magic:GradientStop Offset="0.94" Color="#FFFFFF" />
                    </magic:LinearGradient>
                </magic:GradientView.GradientSource>
