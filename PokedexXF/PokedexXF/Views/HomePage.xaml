                        />
                </magic:GradientView.Mask>
            </magic:GradientView>
            <StackLayout
                Padding="43,35,43,30"
                HorizontalOptions="EndAndExpand"
                Orientation="Horizontal"
                Spacing="20"
                >
                <Image
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="icon_generation"
                    VerticalOptions="Center"
                    WidthRequest="20"
                    />
                <Image
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="icon_sort"
                    VerticalOptions="Center"
                    WidthRequest="20"
                    />
                <Image
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="icon_filter"
                    VerticalOptions="Center"
                    WidthRequest="20"
                    />
            </StackLayout>
            <StackLayout
                Grid.Row="1"
                Padding="40,0,40,20"
                HorizontalOptions="Start"
                Orientation="Vertical"
                Spacing="0"
                >
                <Label
                    Margin="0,0,0,5"
                    Style="{StaticResource LabelAplicationTitle}"
                    Text="Pokédex"
                    TextColor="{StaticResource ColorTextBlack}"
                    />
                <Label
                    Style="{StaticResource LabelDescription}"
                    Text="Search for Pokémon by name or using the National Pokédex number."
                    TextColor="{StaticResource ColorTextGray}"
                    />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>