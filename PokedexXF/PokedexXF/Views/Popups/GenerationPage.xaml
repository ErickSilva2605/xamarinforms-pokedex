                        Grid.Row="1"
                        Margin="25,0"
                        ItemsSource="{Binding Filters.Generations}"
                        VerticalOptions="Start"
                        >
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout
                                HorizontalItemSpacing="10"
                                Orientation="Vertical"
